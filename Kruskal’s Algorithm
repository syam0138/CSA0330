#include <stdio.h>
#define INF 999
int parent[10];
int find(int i)
{
    while(parent[i]) i=parent[i];
    return i;
}
void uni(int i,int j)
{
    parent[j]=i;
}

int main(){
    int n,a[10][10],i,j,min,u,v,ne=0;
    printf("Enter n: ");
    scanf("%d",&n);
    for(i=0;i<n;i++)
        for(j=0;j<n;j++)
            scanf("%d",&a[i][j]);

    while(ne<n-1){
        min=INF;
        for(i=0;i<n;i++)
            for(j=0;j<n;j++)
                if(a[i][j]<min){
                    min=a[i][j];
                    u=i; v=j;
                }
        int x=find(u), y=find(v);
        if(x!=y){
            printf("%d - %d = %d\n",u,v,min);
            uni(x,y);
            ne++;
        }
        a[u][v]=a[v][u]=INF;
    }
    return 0;
}

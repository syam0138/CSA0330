#include <stdio.h>
#define INF 999
int main()
{
    int n,a[10][10],v[10]={0},i,j,ne=0,min,u,vtx;
    printf("Enter n: ");
    scanf("%d",&n);
    for(i=0;i<n;i++)
        for(j=0;j<n;j++)
            scanf("%d",&a[i][j]);

    v[0]=1;
    while(ne<n-1){
        min=INF;
        for(i=0;i<n;i++)
            if(v[i])
                for(j=0;j<n;j++)
                    if(!v[j] && a[i][j]<min){
                        min=a[i][j];
                        u=i; vtx=j;
                    }
        printf("%d - %d = %d\n",u,vtx,min);
        v[vtx]=1;
        ne++;
    }
    return 0;
}

#include <stdio.h>
int main() 
{
    int a[50], n, i, pos, val, ch;

    printf("Enter number of elements: ");
    scanf("%d",&n);
    for(i=0;i<n;i++)
        scanf("%d",&a[i]);

    printf("1.Insert 2.Delete 3.Display\n");
    scanf("%d",&ch);

    if(ch==1) {
        printf("Enter position and value: ");
        scanf("%d %d",&pos,&val);
        for(i=n;i>=pos;i--)
            a[i]=a[i-1];
        a[pos-1]=val;
        n++;
    }
    else if(ch==2) {
        printf("Enter position: ");
        scanf("%d",&pos);
        for(i=pos-1;i<n-1;i++)
            a[i]=a[i+1];
        n--;
    }

    printf("Array elements:\n");
    for(i=0;i<n;i++)
        printf("%d ",a[i]);
    return 0;
}
